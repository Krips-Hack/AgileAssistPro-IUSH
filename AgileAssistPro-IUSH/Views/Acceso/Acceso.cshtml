@model Usuarios
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AccesoIndex</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body{
            background: #4FA1E2 url('/Img/EstudiantesLogin.jpg') no-repeat center center fixed;
            background-size: cover;
            position: relative;
            margin: 0;
            padding: 20;
            height: 100%;
        }
            body::before {
                content: '';
                position: fixed;
                top: 0;
                left: 0;
                background: rgba(79, 161, 226, 0.8);
                width: 100%;
                height: 100%;
                z-index: -1;
            }

        .content-container {
            position: relative;
            z-index: 1;
        }
        .flex-container {
            display:flex;
            justify-content:center;
            align-items:center;
            min-height:100vh;
        }

    </style>
</head>
<body>
    <div class="flex-container">
        <div class="content-container">
            <div class="col-sm-4 offset-sm-4" style="box-shadow: rgba(0, 0, 0, 0.1) 0px 10px 15px -3px, rgba(0, 0, 0, 0.05) 0px 4px 6px -2px; justify-content:center; padding:30px 30px; background-color:#E9EAF1;border-radius:5px">
                <form asp-controller="Acceso" asp-action="Acceso" method="post">
                    <div style="display:flex; justify-content:center; align-items:center">
                        <img src="/Img/Logo.png" alt="Logo" style="width:80%;height:80%;padding-top:3px;padding-bottom:20px" />
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Correo Electrónico</label>
                        <input type="email" class="form-control" asp-for="Correo">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Contraseña</label>
                        <input type="password" class="form-control" asp-for="Id">
                    </div >
                    <div style="display:flex;justify-content:center">
                    <button type="submit" class="btn btn-primary">Ingresar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>